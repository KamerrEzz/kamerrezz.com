---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="es">
	<head>
		<BaseHead title={`${SITE_TITLE} - Blog`} description={SITE_DESCRIPTION} />
	</head>
	<body class="bg-neutral-900 text-white">
		<main class="min-h-screen">
			<!-- Navigation Tabs -->
			<div class="flex justify-center gap-8 pt-12 pb-8">
				<a 
					href="/" 
					class="text-lg font-medium text-gray-400 hover:text-white transition-colors pb-2"
				>
					Portfolio
				</a>
				<a 
					href="/blog" 
					class="text-lg font-medium pb-2 border-b-2 transition-colors"
					style="color: #5C0F33; border-color: #5C0F33;"
				>
					Blog
				</a>
				<a 
					href="/about" 
					class="text-lg font-medium text-gray-400 hover:text-white transition-colors pb-2"
				>
					About
				</a>
			</div>

			<!-- Blog Section -->
			<section class="max-w-6xl mx-auto px-4 md:px-8 pb-20">
				<h2 class="text-4xl font-bold text-white mb-16 text-center">Blog</h2>
				<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
					{posts.map((post) => (
						<a 
							href={`/blog/${post.id}/`}
							class="group flex flex-col rounded-lg transition-all duration-300 border border-neutral-800/30 hover:border-neutral-700/50 hover:bg-neutral-800/20 overflow-hidden"
						>
							{post.data.heroImage && (
								<div class="relative w-full h-48 overflow-hidden">
									<Image 
										width={720} 
										height={360} 
										src={post.data.heroImage} 
										alt={post.data.title}
										class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
									/>
								</div>
							)}
							<div class="flex flex-col p-8 flex-grow">
								<h3 class="text-xl font-semibold text-white mb-3 transition-colors line-clamp-2">
									{post.data.title}
								</h3>
								{post.data.description && (
									<p class="text-gray-400 text-sm leading-relaxed mb-4 flex-grow line-clamp-3">
										{post.data.description}
									</p>
								)}
								<div class="flex items-center gap-2 text-sm text-gray-500">
									<FormattedDate date={post.data.pubDate} />
									<span>·</span>
									<span class="transition-all duration-300 opacity-60 group-hover:opacity-100" style="color: #5C0F33;">
										Leer más →
									</span>
								</div>
							</div>
						</a>
					))}
				</div>
			</section>
		</main>
	</body>
</html>
